{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build file",
            "command": "C:\\mingw\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\main.cpp",
                "-o",
                "${workspaceFolder}\\ScoutCardMaker2024.exe",
                "-IC:\\raylib\\src",     // Include the Raylib headers
                "-LC:\\raylib\\src",     // Include the Raylib headers
                "-lraylib", 
                "-lopengl32", 
                "-lgdi32", 
                "-lwinmm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}